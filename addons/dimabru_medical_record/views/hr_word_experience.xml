<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="hr_word_experience_tree_view" model="ir.ui.view">
            <field name="name">hr.word.experience.tree</field>
            <field name="model">hr.word.experience</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>

       
        <record id="hr_word_experience_form_view" model="ir.ui.view">
            <field name="name">hr.word.experience.form</field>
            <field name="model">hr.word.experience</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="employee_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      
        <record id="hr_word_experience_action" model="ir.actions.act_window">
            <field name="name">HR Work Experience</field>
            <field name="res_model">hr.word.experience</field>
            <field name="view_mode">tree,form</field>
        </record>

        
    </data>
</odoo>
